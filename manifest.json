{
  "name": "Tabular",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Easily search open tabs",
  "permissions": [
    "tabs"
  ],
  "background": {
    "scripts": ["build/js/background.js"]
  },
  "commands": {
    "showTabularPopup": {
      "suggested_key": {
        "default": "Ctrl+Shift+K"
      },
      "description": "Show Tabular popup"
    }
  },
  "browser_action": {
    "default_icon": "build/icon16.png",
    "default_popup": "build/popup.html"
  },
  "icons": {
    "16": "build/icon16.png",
    "48": "build/icon48.png",
    "128": "build/icon128.png"
  }
}
